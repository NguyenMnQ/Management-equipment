@model IEnumerable<EquipmentManagerment.Context.NhanVien_ThietBi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">DANH SÁCH THIẾT BỊ CHO MƯỢN</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <a class="submitbutton" href="/Admin/BorrowList/Create"> Thêm hồ sơ cho mượn</a>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr style="text-align: center">
                                    <th>
                                        @Html.DisplayNameFor(model => model.ID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NhanVien.TenNhanVien)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ThietBi.TenThietBi)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NgayMuon)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NgayTra)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ThongTinMoTa)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>Tùy chọn</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {

                                    if (item.NgayTra < DateTime.Now)
                                    {
                                        <tr style="background-color: yellow">
                                            <td style="text-align: center">
                                                @Html.DisplayFor(modelItem => item.ID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NhanVien.TenNhanVien)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ThietBi.TenThietBi)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NgayMuon)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NgayTra)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ThongTinMoTa)
                                            </td>
                                            <td style="text-align: center">
                                                @if (@item.Status == 1)
                                                {
                                                    <span style="color: #4CAF50">Đang mượn</span>
                                                }
                                                else
                                                {
                                                    <span style="color: #f44336">Đã trả</span>
                                                }
                                            </td>
                                            <td style="text-align: center">
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "editbutton" })
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "deletebutton", @onclick = "return confirm ('Bạn có chắc muốn xóa hồ sơ này không ???')" })
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td style="text-align: center">
                                                @Html.DisplayFor(modelItem => item.ID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NhanVien.TenNhanVien)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ThietBi.TenThietBi)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NgayMuon)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NgayTra)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ThongTinMoTa)
                                            </td>
                                            <td style="text-align: center">
                                                @if (@item.Status == 1)
                                                {
                                                    <span style="color: #4CAF50">Đang mượn</span>
                                                }
                                                else
                                                {
                                                    <span style="color: #f44336">Đã trả</span>
                                                }
                                            </td>
                                            <td style="text-align: center">
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "editbutton" })
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "deletebutton", @onclick = "return confirm ('Bạn có chắc muốn xóa hồ sơ này không ???')" })
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
