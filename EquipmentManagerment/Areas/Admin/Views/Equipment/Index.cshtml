@model IEnumerable<EquipmentManagerment.Context.ThietBi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">DANH SÁCH THIẾT BỊ</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <a class="submitbutton" href="/Admin/Equipment/Create"> Thêm thiết bị </a>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr style="text-align: center">
                                    <th>
                                        @Html.DisplayNameFor(model => model.ID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenThietBi)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Model)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Thongtin)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>Tùy chọn</th>
                                </tr>
                            </thead>
                          
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td style="text-align: center">
                                        @Html.DisplayFor(modelItem => item.ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenThietBi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Model)
                                    </td>
                                    <td style="width: 50%">
                                        @Html.DisplayFor(modelItem => item.Thongtin)
                                    </td>
                                    <td style="text-align: center">
                                        @if (@item.Status == 1)
                                        {
                                            <span style="color: #4CAF50">Hoạt động bình thường</span>
                                        }
                                        else
                                        {
                                            <span style="color: #f44336">Đã bị hư</span>
                                        }
                                    </td>
                                    <td style="text-align: center">
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "editbutton"  })
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "deletebutton", @onclick = "return confirm ('Bạn có chắc muốn xóa thiết bị này không ???')" })
                                    </td>
                                </tr>
                                }
                            </tbody>                          
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
